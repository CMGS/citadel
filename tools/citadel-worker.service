[Unit]
Description=Citadel
After=network.target

[Service]
Type=simple
Environment="OAUTHLIB_INSECURE_TRANSPORT=1" "GRPC_VERBOSITY=INFO" "CELERY_RESULT_BACKEND=redis://10.10.176.179" "CELERY_BROKER_URL=redis://10.10.176.179"
WorkingDirectory=/opt/citadel
ExecStart=/usr/bin/celery -A app:celery worker --autoscale=50,8 --loglevel DEBUG -Q citadel
LimitNOFILE=10485760
LimitNPROC=10485760
LimitCORE=infinity
MountFlags=slave
Restart=always

[Install]
WantedBy=multi-user.target
